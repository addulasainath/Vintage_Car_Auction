    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <% if current_user.present? %>
    <%= render "shared/topbar" %>
    <div class="container">
      <%= render "shared/alert" %>
      <%= yield %>
    </div>
  <% else %>
    <%= render "shared/alert" %>
    <%= yield %>
  <% end %>
  </body>
</html>
