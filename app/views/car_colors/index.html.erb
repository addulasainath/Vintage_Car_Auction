<div class="card mt-3">
  <div class="card-body">
    <h5 class="card-title">Car Colors</h5>

    <!-- Default Table -->
    <table class="table">
      <thead>
      <tr>
        <th scope="col">S.No</th>
        <th scope="col">Car type</th>
        <th scope="col">Color</th>
      </tr>
      </thead>
      <tbody>
      <% @car_colors.each_with_index do |car_color, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= car_color.car_type.name %></td>
          <td><%= car_color.color_name %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
