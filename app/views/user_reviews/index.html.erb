<div class="card mt-3">
  <div class="card-body">
    <h5 class="card-title">User Reviews</h5>

    <!-- Default Table -->
    <table class="table">
      <thead>
      <tr>
        <th scope="col">S.No</th>
        <th scope="col">Review</th>
      </tr>
      </thead>
      <tbody>
      <% @user_reviews.each_with_index do |user_review, index| %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td><%= user_review.comment %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
